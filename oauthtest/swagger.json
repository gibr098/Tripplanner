      "get" : {
        "summary" : "Ritorna la lista dei luoghi di tipo -luogo- per una citta",
        "parameters" : [ {
          "name" : "luoghi",
          "in" : "path",
          "description" : "Tipo luogo: <br> Ristorante, hotel, cinema",
          "required" : true,
          "type" : "string"
        },
        {
          "name" : "citta",
