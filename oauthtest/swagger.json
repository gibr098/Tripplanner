          "200" : {
            "description" : "OK"
          }
        }
      }
    },
    "/api/calendar/addevent" : {
      "post" : {
        "summary" : "Aggiunge un evento a google calendar",
        "parameters" : [ {
          "name" : "citta",
          "in" : "query",
          "description" : "Citt√† da visitare",
          "required" : true,
          "type" : "string"
        },
        {
          "name" : "tipoluogo",
          "in": "query",
          "description" : "Tipo del luogo: <br> Ristorante, Cinema, Hotel",
          "required" : true,
          "type" : "string"
        },
        {
          "name" : "nomeluogo",
          "in": "query",
          "description" : "Nome del posto da visitare",
          "required" : true,
          "type" : "string"
        },
        {
          "name" : "datainizio",
          "in": "query",
          "description" : "Data inizio del viaggio",
          "required" : true,
          "type" : "string"
        },
        {
          "name" : "datafine",
          "in": "query",
          "description" : "Data fine del viaggio",
          "required" : true,
          "type" : "string"
        }],
        "responses" : {
          "200" : {
            "description" : "OK"
          },
          "401" : {
            "description" : "UNAUTHORIZED"
          }
        }
      }
    },
     "/api/calendar/getevents" : {
      "get" : {
        "summary" : "Restituisce gli eventi creati dall'app su google calendar",
